<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_main_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/get" />

    <TextView
        android:id="@+id/adapter_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/adapter_main_tx"
        android:text="名字"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/adapter_main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_main_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/adapter_main_tx"
        android:singleLine="true"
        android:text="内容"
        android:textColor="#A9A9A9"
        android:textSize="15dp" />
</RelativeLayout>